<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAF2FF">

    <!-- ================= HEADER BIRU ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="#5C8FE6"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Berbunyi"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kegiatan"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvAlarmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melaksanakan sholat subuh"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <!-- ================= INFO PUTIH ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jawab ke-3 pertanyaan ini untuk mematikan alarm"
            android:textSize="12sp"
            android:textColor="#444"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- PROGRESS BAR -->
        <ProgressBar
            android:id="@+id/progressQuiz"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_quiz" />

        <!-- TEXT DI BAWAH PROGRESS -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pertanyaan 1 dari 3"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#444"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- ================= QUIZ FULL AREA ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp">

        <!-- SOAL -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solat subuh dilakukan berapa rakaat?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- JAWABAN BUTTON STYLE -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- NOTE:
                 RadioButton akan ditambahkan dari Kotlin
                 tapi tampil seperti BUTTON karena style di-set di code
            -->
        </RadioGroup>

        <!-- SPACER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- BUTTON LANJUT -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Lanjut"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#5C8FE6"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnStopAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
